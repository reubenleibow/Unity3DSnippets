using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Button_Click_Script : MonoBehaviour
{
	public User_Script user_Script;
	// Start is called before the first frame update
	void Start()
	{
		user_Script = GetComponent<User_Script>();
	}

	// Update is called once per frame
	void Update()
	{

	}

	public void On_DrillRock_Click()
	{
		if(user_Script.Selected_Objects.Count > 0)
		{
			user_Script.Destroying_Objects(user_Script.Selected_Objects[0]);
		}
	}

}
